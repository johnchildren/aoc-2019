name:                aoc2019
version:             0.1.0.0
-- synopsis:
-- description:
-- bug-reports:
-- license:
license-file:        LICENSE
-- author:
-- maintainer:
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

common haskell
  default-language:   Haskell2010
  default-extensions:
    OverloadedStrings
    TypeApplications
    GADTs
    ViewPatterns

common dependencies
  build-depends:
    , base           >=4.9 && <5.0
    , text           ^>=1.2
    , vector         ^>=0.12
    , containers     ^>=0.6

common warning-flags
  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wcompat -Widentities -Wredundant-constraints
    -Wmissing-export-lists -Wpartial-fields -Wincomplete-patterns
    -Wmonomorphism-restriction -Wmissing-local-signatures

library
  import:              haskell, dependencies, warning-flags
  hs-source-dirs:      lib
  exposed-modules:     IntCode

test-suite test
  import:              haskell, dependencies, warning-flags
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  hs-source-dirs:      tests
  build-depends:       aoc2019

executable day1
  import:              haskell, dependencies, warning-flags
  main-is:             Main.hs
  hs-source-dirs:      days/day1

